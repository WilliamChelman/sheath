{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sheath Standalone",
  "version": "0.1.0",
  "identifier": "be.chelm.sheath.standalone",
  "build": {
    "frontendDist": "../../../dist/apps/standalone-ui/browser",
    "devUrl": "http://localhost:4201"
  },
  "app": {
    "windows": [
      {
        "title": "Sheath",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
