{
  "name": "standalone-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/standalone-ui/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/standalone-ui",
        "browser": "apps/standalone-ui/src/main.ts",
        "polyfills": [],
        "tsConfig": "apps/standalone-ui/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/standalone-ui/public"
          },
          {
            "glob": "data-md.json",
            "input": "dist/data",
            "output": "/data/"
          }
        ],
        "styles": [
          "libs/ui/src/tailwind.css",
          "libs/ui/src/markdown.css",
          "apps/standalone-ui/src/styles.css"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "2mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "24kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "standalone-ui:build:production"
        },
        "development": {
          "buildTarget": "standalone-ui:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "standalone-ui:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/standalone-ui"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "standalone-ui:build",
        "staticFilePath": "dist/apps/standalone-ui/browser",
        "spa": true
      }
    }
  }
}
